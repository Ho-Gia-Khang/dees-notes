    "@types/node": "^24.0.13",
    "jest": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^6.11.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
