{
  "name": "@dees-notes/shared-module",
  "version": "1.0.0",
  "description": "Shared module for Dees Notes services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc --project ./tsconfig.json",
    "build:local": "cp .env.local .env && npm run build",
